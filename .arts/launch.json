{
  "configurations": [
    {
      "name": "msdebug",
      "type": "msdebug-mi",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "target": "${workspaceFolder}/build/${workspaceFolderBasename}",
      "environmentScripts": [
        "${workspaceFolder}/.arts/.env"
      ]
    },
    {
      "name": "msdebug-cpu",
      "type": "msdebug-mi",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "target": "${workspaceFolder}/build/${workspaceFolderBasename}",
      "msdebugMiPath": "/usr/bin/gdb",
      "environmentScripts": [
        "${workspaceFolder}/.arts/.env"
      ]
    },
    {
      "name": "msdebug-python",
      "type": "msdebug-mi",
      "request": "launch",
      "cwd": "${workspaceRoot}/build",
      "target": "/usr/local/bin/python",
      "targetArgs": [
        "${workspaceFolder}/run.py"
      ],
      "environmentScripts": [
        "${workspaceFolder}/.arts/.env"
      ],
      "skipEnvCheck": true
    }
  ]
}